.page-header
  %h2= "Places"
%table.table.table-striped
  %thead
    %tr
      %th= "Name"
      %th= "Street"
      %th= "City"
      %th= "Country"
      %th= "Created at"
      %th= "Actions"
  %tbody
    - places.each do |place|
      %tr
        %td= place.name
        %td.col-md-4= place.street
        %td= place.city
        %td= place.country
        %td= d(place.created_at)
        %td
          .btn-group
            = link_to "Show", place_path(place), class: 'btn btn-info'
            = link_to "Edit", edit_place_path(place) , class: 'btn btn-primary'
            = link_to "CheckIn",checkins_path(checkin: { place_id: place.id}), data: { method: 'post'}, class: 'btn btn-success'
            = link_to "Delete", place_path(place), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-warning'
.form-actions
  = link_to "Create new place", new_place_path, class: 'btn btn-primary'

