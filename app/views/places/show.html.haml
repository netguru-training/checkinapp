.page-header
  %h4= "Place:"
  %h2= place.name
%p
  %strong= "Street:"
  %br
  = place.street
%p
  %strong= "City:"
  %br
  = place.city
%p
  %strong= "Country:"
  %br
  = place.country
%p
  %strong= "Created_at:"
  %br
  = place.created_at
  %br
  %br
.form-actions
  = link_to "Back", places_path, class: 'btn'
  = link_to "Edit", edit_place_path(place), class: 'btn btn-info'
  = link_to "Delete", place_path(place), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default:'Are you sure?')) }, class: 'btn btn-warning'

