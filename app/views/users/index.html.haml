.page-header
  %h2 Users
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th E-mail
      %th Actions
  %tbody
    - users.each do |user|
      %tr
        %td= user.full_name
        %td= user.email
        %td
          = link_to "Show", '#', class: 'btn'
          = link_to "Invite", '#' , class: 'btn btn-info'


