%script{:src => "http://maps.google.com/maps/api/js?sensor=false"}
%script{:src => "/assets/jquery.ui.addresspicker.js"}

%h1=user.full_name
%p
  %bEmail:
  =user.email
%br

-unless last_checkin.nil?
  %h2 Last checkin:

  %p 
    %b Name:
    =last_checkin.place.name
  %p
    %b Address:
    =last_checkin.place.address

  %input#addresspicker_map{ type: 'text', hidden: true }

  .clearfix
  .input.input-positioned

  .map-wrapper


    #map
  .input-positioned
-else
  %h4
    This user dont have any checkins yet.