%script{ src: "http://maps.google.com/maps/api/js?sensor=false" }
.starter-template
  %h1 Check In App
  %p.lead
    %table.table.table-striped
      %thead
        %tr
          %th Name
          %th E-mail
          %th Place
          %th Actions
      %tbody
        - @checkins.each do |checkins|
          %tr
            %td= checkins.user.full_name
            %td= checkins.user.email
            %td= checkins.formatted
            %td
              = link_to "Show", user_path(checkins.user), class: 'btn btn-info'
              = link_to "Delete from friend", '', class: 'btn btn-warning'

#map-canvas{ style: 'width: 100%; height: 400px;' }
