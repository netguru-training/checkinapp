%header.navbar.navbar-default.navbar-fixed-top{ role: 'navigation' }
  .container
    .navbar-header
      %button.navbar-toggle{ data: { target: '.navbar-collapse', toggle: 'collapse', type: 'button' } }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{ href: root_path } CheckinApp
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li= link_to 'Places', places_path
        %li= link_to 'Users', users_path
        %li= link_to 'Account', account_path
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li{class: "divider-vertical"}
          %li.dropdown
            = link_to "", class: "dropdown-toggle", data: { toggle: "dropdown" } do
              = current_user.fullname
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Edit", edit_user_registration_path
              %li= link_to "Logout", destroy_user_session_path, method: :delete
        - else
          %li= link_to "Sign in", new_user_session_path
          %li= link_to "Sign up", new_user_registration_path
