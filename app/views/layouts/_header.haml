%header.navbar.navbar-default.navbar-fixed-top{ role: 'navigation' }
  .container
    .navbar-header
      %button.navbar-toggle{ data: { target: '.navbar-collapse', toggle: 'collapse', type: 'button' } }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{ href: root_path } CheckinApp
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li= link_to 'Places', places_path
        %li= link_to 'Users', users_path
        %li= link_to 'Account', account_path
        - if user_signed_in?
          %li
            %a{:href => "#"}
            = "Signed in as: #{current_user.fullname}"
          %li= link_to "Sign out", destroy_user_session_path, :method => :delete
        - else
          %li= link_to "Sign in", new_user_session_path
          %li= link_to "Sign up", new_user_registration_path
