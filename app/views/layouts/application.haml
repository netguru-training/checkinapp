!!!
%html
  %head
    %meta{ charset: 'utf-8' }
    %title CheckinApp
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .navbar.navbar-default.navbar-fixed-top{ role: 'navigation' }
      .container
        .navbar-header
          %button.navbar-toggle{ data: { target: '.navbar-collapse', toggle: 'collapse', type: 'button' } }
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{ href: '#' } CheckinApp
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.active
              %a{ href: '#' } Home
            %li
              %a{ href: 'places' } Places
            %li
              %a{ href: '#contact' } Users
            - if user_signed_in?
              %li
                %a{:href => "#"}
                = 'Signed in as: ' + current_user.first_name + ' ' + current_user.last_name
              %li= link_to "Sign out", destroy_user_session_path, :method => :delete
            - else
              %li= link_to "Sign in", new_user_session_path
              %li= link_to "Sign up", new_user_registration_path
    .container{ class: "#{controller_name.downcase} #{action_name}" }
      = yield
